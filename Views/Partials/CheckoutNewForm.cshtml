@using FreakyFashion.Controllers.Form
@using FreakyFashion.Models.ViewModels.Forms
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<CheckoutNewFormViewModel>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginUmbracoForm<CheckoutFormController>(nameof(CheckoutFormController.CheckoutNewAccount)))
{
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-2 mb-2">
            <div class="form-floating col-6">
            <input asp-for="@Model.FirstName" class="form-control" />
            <label asp-for="@Model.FirstName"></label>
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating col-6">
                <input asp-for="@Model.LastName" class="form-control" />
            <label asp-for="@Model.LastName"></label>
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-floating col-12 mb-2">
            <input asp-for="@Model.Email" class="form-control" />
            <label asp-for="@Model.Email"></label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-floating col-6 mb-3">
            <input asp-for="@Model.Password" class="form-control" />
            <label asp-for="@Model.Password"></label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Köp</button>
}